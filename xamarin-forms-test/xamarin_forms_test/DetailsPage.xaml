<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OMDbBrowser.DetailsPage">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness"
                iOS="20, 40, 20, 20"
                Android="20, 20, 20, 20"
                WinPhone="20, 20, 20, 20" />
  </ContentPage.Padding>
  <ContentPage.Content>
    <StackLayout VerticalOptions="FillAndExpand"
                 HorizontalOptions="FillAndExpand"
                 Orientation="Vertical"
                 Spacing="15"
                 x:Name="stackLayout">
      <StackLayout Orientation="Horizontal" Spacing="20">
        <Image x:Name="imgPoster" HorizontalOptions="Start"/>
        <StackLayout Orientation="Vertical">
          <StackLayout Orientation="Horizontal">
            <Label x:Name="lblTitle" FontSize="Large" />
            <Label x:Name="lblYear" FontSize="Large" />
            <Label x:Name="lblRating" FontSize="Large" />
          </StackLayout>
          <Label x:Name="lblGenre" />
          <Label x:Name="lblPlot" FontAttributes="Italic" FontSize="Medium"/>
        </StackLayout>
      </StackLayout>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>