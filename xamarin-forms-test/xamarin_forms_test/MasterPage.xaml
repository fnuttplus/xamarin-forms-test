<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:OMDbBrowser"
             x:Class="OMDbBrowser.MasterPage">
  <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness"
                iOS="20, 40, 20, 20"
                Android="20, 20, 20, 20"
                WinPhone="20, 20, 20, 20" />
  </ContentPage.Padding>
  <ContentPage.Content>
    <StackLayout VerticalOptions="FillAndExpand"
                 HorizontalOptions="FillAndExpand"
                 Orientation="Vertical"
                 Spacing="15"
                 x:Name="stackLayout">

      <StackLayout Orientation="Horizontal" >
        <Entry x:Name="inSearch" Text="Batman" HorizontalOptions="FillAndExpand"/>
        <Button x:Name="btnSearch" Text="Search" Clicked="OnSearch" />
      </StackLayout>
      <ActivityIndicator IsRunning="true" IsVisible="false" x:Name="aiLoading"/>
      <ListView x:Name="MovieView" ItemSelected="OnSelected" SeparatorColor="Maroon">
        <ListView.ItemTemplate>
          <DataTemplate>
            <local:NativeCell Title="{Binding Title}" Year="{Binding Year}" Poster="{Binding Poster}" />
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
      <Label Text="" x:Name="lblOut" IsVisible="false"/>

    </StackLayout>
  </ContentPage.Content>
</ContentPage>